
@{
    ViewBag.Title = "Index";
}

<div id="names">
    <h2>Bizim kart oyunu</h2>
    <div class="row">
        <div class="cell-4">
            <div class="form-group">
                <label>Adı</label>
                <input type="text" v-model="person" />
            </div>
            <div class="form-group">
                <button class="button primary" @@click="addName">Ekle</button>
            </div>
        </div>
    </div>
    <hr />
    <ul>
        <li v-for="p in people">{{p}}</li>
    </ul>
</div>

@section scripts{
    <script>
        new Vue({
            el: "#names",
            methods: {
                addName: function () {
                    this.people.push(this.person);
                    this.person = "";
                }
            },
            data: {
                people: [],
                person: ""
            }
        });
        
    </script>
}