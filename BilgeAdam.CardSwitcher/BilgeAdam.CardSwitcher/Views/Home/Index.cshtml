
@{
    ViewBag.Title = "Index";
}

<h2>Bizim kart oyunu</h2>
<div class="row">
    <div class="cell-4">
        <div class="form-group">
            <label>Adı</label>
            <input type="text" id="txt" />
        </div>
        <div class="form-group">
            <button class="button primary" id="btn">Ekle</button>
        </div>
    </div>
</div>

<hr />
<ul id="list"></ul>

@section scripts{
    <script>
        function clearItem(item) {
            $(item).parent().remove();
        }

        $(document).ready(function () {
            $("#btn").click(function () {
                var name = $("#txt").val();
                var list = $("#list");
                list.append("<li>" + name + "<button onclick='javascript:clearItem(this)'>X</button></li>")
                $("#txt").val("");
            });
        });
    </script>
}